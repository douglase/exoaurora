#!/bin/sh

# Prevent numpy from multithreading
export OPENBLAS_NUM_THREADS=1

# CD into our working directory
cd ${SEARCH_DIR}

if [ $NODES -eq 1 ]; then
  # Run on a single node with Python multiprocessing
  python -c "import search; search.Search(line = $LINE)"
else
  # Run on multiple nodes with MPI
  mpirun -np $PBS_NP python -c "import search; search.Search(line = $LINE)"
fi